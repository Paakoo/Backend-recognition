FACE_IMAGE_SIZE=250

# Security
JWT_SECRET_KEY=another-secure-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour

# Embeddings
EMBEDDINGS_PATH=model/ds_model_face.h5