# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secure-secret-key-here
FLASK_HOST=192.168.1.20
FLASK_PORT=5000

# File Upload Settings
UPLOAD_FOLDER=static/uploads
BASE_FOLDER=databaru/
ALLOWED_EXTENSIONS=jpg,jpeg,png
